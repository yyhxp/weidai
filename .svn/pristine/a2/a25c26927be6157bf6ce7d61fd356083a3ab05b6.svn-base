*{margin: 0; padding: 0;}

/* 网页头部样式 */
#header{
    width: 100%;
    height: 100px;
}
.h-logo{
    line-height: 61px;
    margin-left: 15%;
}
.h-logo img{
    margin-top: 30px;
    margin-bottom: 42px;
}
.h-logo em{
    display: inline-block;
    margin-left: 20px;
    color: #bdbdbd;
    font-style: normal;
}
.h-logo a{
    text-decoration: none;
    font-size: 20px;
    text-align: center;
    margin-left: 12px;
    color: #212121;
}


/* 网页主体样式 */
#content{
    width: 100%;
    height: 560px;
    position: relative;

}
#c-con{
    width: 1100px;
    height: 560px;
    margin: 0 auto;
    background-color: white;
    border: 1px solid silver;
}
#c-con form{
    width: 1100px;
    height: 400px;
    margin-top: 120px;
    padding-left: 38%;
}
#c-con form label{
    font-size: 17px;
    font-weight: 500;
}
.c-three button{
    margin-top: 17px;
    width: 290px;
    height: 45px;
}



/* 网页底部样式 */
#footer{
    width: 100%;
    height: 150px;
}
.guanyu{
    width: 100%;
    height: 70px;
}
.guanyu p{
    padding-top: 45px;
    text-align: center;
    font-size: 17px;
    color: black;
    cursor: pointer;
}
.guanyu span{
    margin-left: 10px;
    margin-right: 10px;
}
.beizhu{
    width: 100%;
    height: 30px;
}
.beizhu p{
    text-align: center;
    font-size: 15px;
    color: silver;
    margin-top: 30px;
}